---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import SearchBar from '../components/SearchBar.astro';
import { getCollection } from 'astro:content';
import Footer from '../components/Footer.astro';
const ctfPosts = await getCollection('ctf');
const labPosts = await getCollection('labs');
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VA Writeups</title>
  </head>
  <body class="bg-black text-white font-sans">
    <Navbar />


    <SearchBar />


    <main class="max-w-7xl mx-auto px-6 py-10">
      <div class="grid md:grid-cols-2 gap-10">
        <!-- SecciÃ³n de CTFs -->
        <section>
          <h2 class="text-3xl font-bold mb-4 border-b border-cyan-400 pb-2">ðŸ§  CTF Writeups</h2>
          <ul class="space-y-6">
            {ctfPosts.map((post) => (
              <li class="border-b border-gray-700 pb-2">
                <a class="text-cyan-400 text-xl hover:underline" href={`/ctf/${post.slug}`}>
                  {post.data.title}
                </a>
                <p class="text-sm text-gray-400">
                  {post.data.platform} â€” {new Date(post.data.publishedAt).toLocaleDateString()}
                </p>
              </li>
            ))}
          </ul>
        </section>

        <!-- SecciÃ³n de Labs -->
        <section>
          <h2 class="text-3xl font-bold mb-4 border-b border-yellow-400 pb-2">ðŸ§ª Labs</h2>
          <ul class="space-y-6">
            {labPosts.map((post) => (
              <li class="border-b border-gray-700 pb-2">
                <a class="text-yellow-400 text-xl hover:underline" href={`/labs/${post.slug}`}>
                  {post.data.title}
                </a>
                <p class="text-sm text-gray-400">
                  {post.data.tags?.join(', ') ?? 'Sin tags'}
                </p>
              </li>
            ))}
          </ul>
        </section>
      </div>
    </main>
  </body>
  <Footer />
</html>
