---
const { frontmatter } = Astro.props;
---

<header class="sticky top-0 z-40 bg-gradient-to-r from-black via-gray-900 to-black border-b border-gray-800">
  <!-- Patrón de textura sutil -->
  <div class="absolute inset-0 bg-gradient-to-r from-cyan-800/15 via-blue-800/10 to-cyan-800/15"></div>
  
  <div class="relative flex justify-between items-center px-6 py-4">
    <!-- Lado izquierdo: Breadcrumb -->
    <div class="flex items-center space-x-4">
      <div class="text-xl font-bold text-cyan-400">
        <a href="/" class="inline-block">
          <img src="/images/MVLOGO.png" alt="Logo" class="w-8 h-8" />
        </a>
      </div>
      <nav class="space-x-4 text-sm">
        <a href="/" class="hover:underline text-cyan-400 hover:text-cyan-300 transition-colors">Home</a>
      
        {frontmatter?.platform && (
          <>
            <span class="text-gray-500">/</span>
            <a href={`/ctf/${frontmatter.platform.toLowerCase()}`} class="hover:underline text-cyan-400 hover:text-cyan-300 transition-colors">
              {frontmatter.platform}
            </a>
          </>
        )}
        {frontmatter?.title && (
          <>
            <span class="text-gray-500">/</span>
            <span class="text-gray-300">{frontmatter.title}</span>
          </>
        )}
      </nav>
    </div>

    <!-- Lado derecho: Enlaces externos (ocultos en móvil) -->
    <div class="hidden md:flex items-center space-x-6 pr-4">
      <a href="https://cheats1sheets.com" target="_blank" rel="noopener noreferrer" 
         class="px-3 py-1.5 text-sm text-cyan-400 bg-cyan-900/30 hover:bg-cyan-800/50 border border-cyan-700/50 hover:border-cyan-600/70 rounded-md transition-all duration-200 font-medium">
        Cheats1sheets
      </a>
      <a href="https://knowledge-base.com" target="_blank" rel="noopener noreferrer" 
         class="px-3 py-1.5 text-sm text-cyan-400 bg-cyan-900/30 hover:bg-cyan-800/50 border border-cyan-700/50 hover:border-cyan-600/70 rounded-md transition-all duration-200 font-medium">
        Knowledge Base
      </a>
    </div>
  </div>
</header>

<script type="module">
  import Alpine from 'https://cdn.skypack.dev/alpinejs';
  window.Alpine = Alpine;
  Alpine.store('search', { query: '' });
  Alpine.start();
</script>
