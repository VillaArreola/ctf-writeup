---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<html lang="es" class="min-h-screen">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Metadatos básicos -->
    <meta name="description" content="Writeups de CTF - Colección de write-ups técnicos de HackTheBox, TryHackMe y más plataformas de hacking ético" />
    <meta name="author" content="Villa Arreola" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ctf.villaarreola.com/" />
    <meta property="og:title" content="Writeups CTF - Villa Arreola" />
    <meta property="og:description" content="Writeups de CTF - Colección de write-ups técnicos de HackTheBox, TryHackMe y más plataformas de hacking ético" />
    <meta property="og:image" content="https://ctf.villaarreola.com/images/MVLOGO.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Writeups CTF" />
    <meta property="og:locale" content="es_MX" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://ctf.villaarreola.com/" />
    <meta property="twitter:title" content="Writeups CTF - Villa Arreola" />
    <meta property="twitter:description" content="Writeups de CTF - Colección de write-ups técnicos de HackTheBox, TryHackMe y más plataformas de hacking ético" />
    <meta property="twitter:image" content="https://ctf.villaarreola.com/images/MVLOGO.png" />
    <meta property="twitter:creator" content="@villaarreola" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/MVLOGO.png" />
    <link rel="apple-touch-icon" href="/images/MVLOGO.png" />
    
    <!-- Tema de color -->
    <meta name="theme-color" content="#0891b2" />
    <meta name="msapplication-TileColor" content="#0891b2" />
    
    <!-- Google Analytics (GA4) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
    </script>
    
    <slot name="head" />
    
    <!-- Alpine.js para búsqueda dinámica -->
    <script type="module">
      import Alpine from 'https://cdn.skypack.dev/alpinejs';
      window.Alpine = Alpine;
      Alpine.store('search', { query: '' });
      Alpine.start();
    </script>
  </head>

  <body class="min-h-screen flex flex-col bg-black text-white font-sans px-6 py-10 relative">

    <Navbar />

    <main class="flex-grow max-w-6xl mx-auto relative z-10" x-data>
      <slot />
    </main>

    <Footer />
  </body>
</html>
