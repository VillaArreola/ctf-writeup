---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import SearchBar from '../components/SearchBar.astro';
import { getCollection } from 'astro:content';

const ctfPosts = await getCollection('ctf');

const simplified = ctfPosts.map((post) => ({
  title: post.data.title,
  platform: post.data.platform,
  slug: post.slug,
  date: new Date(post.data.publishedAt).toLocaleDateString('es-MX'),
  cover: post.data.cover ?? `/images/default-cover.jpg`,
  preview: post.data.preview ?? '',
  tags: post.data.tags?.join(' ') ?? ''
}));

const postsJson = JSON.stringify(simplified);
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VA Writeups</title>

    <script type="module">
      import Alpine from 'https://cdn.skypack.dev/alpinejs';
      window.Alpine = Alpine;
      Alpine.store('search', { query: '' });
      Alpine.start();
    </script>
  </head>

  <body class="bg-black text-white font-sans">
    <Navbar />
    <SearchBar />

    <main class="max-w-7xl mx-auto px-6 py-10">
      <section
        x-data="() => ({
          posts: [],
          search: Alpine.store('search'),
          init() {
            const raw = document.getElementById('posts-data')?.textContent;
            this.posts = raw ? JSON.parse(raw) : [];
          }
        })"
      >
        <h2 class="text-3xl font-bold mb-4 border-b border-cyan-400 pb-2">ðŸ§  CTF Writeups</h2>

        <div class="flex flex-wrap gap-3 items-center mb-6">
          <button @click="search.query = 'HTB'" class="bg-cyan-700 hover:bg-cyan-600 text-white px-3 py-1 rounded-full">HTB</button>
          <button @click="search.query = 'THM'" class="bg-cyan-700 hover:bg-cyan-600 text-white px-3 py-1 rounded-full">THM</button>
          <button @click="search.query = 'reverse shell'" class="bg-cyan-700 hover:bg-cyan-600 text-white px-3 py-1 rounded-full">reverse shell</button>
        </div>

        <div class="grid grid-cols-8 gap-6">
          <template x-for="(post, i) in posts" :key="post.slug">
            <a
              :href="`/ctf/${post.slug}`"
              class="group relative"
              :class="{
                'col-span-5': i === 0 || i === 3,
                'col-span-3': i === 1 || i === 2,
                'col-span-4': i > 3
              }"
              x-show="(() => {
                const terms = search.query
                  .toLowerCase()
                  .normalize('NFD')
                  .replace(/[\u0300-\u036f]/g, '')
                  .trim()
                  .split(/\s+/);
              
                const content = `${post.title} ${post.platform} ${post.preview} ${post.tags || ''}`
                  .toLowerCase()
                  .normalize('NFD')
                  .replace(/[\u0300-\u036f]/g, '');
              
                return terms.some(term => content.includes(term));
              })()"
              
              
              
            >
              <div class="bg-gradient-to-b from-[#16181d] to-[#0d0e10] rounded-2xl p-6 shadow-xl hover:scale-[1.01] transition duration-200 border border-gray-800 hover:border-cyan-400">
                <img
                  :src="post.cover"
                  :alt="`Portada de ${post.title}`"
                  @error="event.target.src = '/images/default-cover.jpg'"
                  class="w-full h-40 object-cover rounded mb-4"
                />
                <div class="mb-4">
                  <h3 class="text-lg font-semibold text-white group-hover:text-cyan-400 transition" x-text="post.title"></h3>
                  <p class="text-sm text-gray-400">
                    <span x-text="post.platform"></span> â€” <span x-text="post.date"></span>
                  </p>
                </div>
                <div class="text-sm text-gray-500 leading-relaxed" x-text="post.preview || 'Este writeup aÃºn no tiene descripciÃ³n. ðŸš§'"></div>
              </div>
            </a>
          </template>
        </div>

        <!-- Mensaje si no hay resultados -->
        <p
          class="text-sm text-red-400 mt-6"
          x-show="(() => {
            const terms = search.query
              .toLowerCase()
              .normalize('NFD')
              .replace(/[\u0300-\u036f]/g, '')
              .trim()
              .split(/\s+/)
              .filter(t => t.length > 1);

            return terms.length && !posts.some(post => {
              const content = `${post.title} ${post.platform} ${post.preview} ${post.tags || ''}`
                .toLowerCase()
                .normalize('NFD')
                .replace(/[\u0300-\u036f]/g, '');

              return terms.some(term => content.includes(term));
            });
          })()"
        >
          ðŸ˜¢ No se encontraron resultados para "<span x-text="search.query"></span>".
        </p>
      </section>
    </main>

    <script type="application/json" id="posts-data" set:html={postsJson}></script>
    <Footer />
  </body>
</html>
